<div class="ui page grid">
    <div class="column">
         <div class="ui logo">
            Logo 
         </div>
    </div>
</div>

<div class="ui center aligned page grid">
    <div class="column">
        <div class="ui search">
            <div class="ui large icon input">
                <input class="prompt" type="text" placeholder="Search...">
                <i class="search icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="ui page grid">
 
    {{#movies}}
    <div class="five wide column">
        <div class="ui cards">
            <div class="card">
                <div class="image">
                    <a href="/{{ id }}">
                    <img src="http://aphro.com/get/{{ images.large }}" alt="">
                    </a>
                </div>
                <div class="content">
                    <div class="header">
                        <a href="/{{ id }}">
                        {{ title }}
                        </a>
                    </div>
                    <div class="meta">
                        {{#each genres}}
                            <a href="/tag/{{ this }}">{{ this }}</a>
                        {{/each}}
                    </div>
                    <div class="description">
                        {{ summary }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/movies}}

</div>
