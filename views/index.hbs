<div class="ui page grid">
    <div class="column">
         <div class="ui logo">
            Logo 
         </div>
    </div>
</div>

<div class="ui center aligned page grid">
    <div class="column">
        <div class="ui search">
            <div class="ui large icon input">
                <input class="prompt" type="text" placeholder="Search...">
                <i class="search icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="ui grid">
    <div class="five column"></div>
    <div class="five column"></div>
</div>

<div class="ui center aligned page grid movies">
 
    {{#movies}}
    <div class="five wide column">
        <div class="ui cards">
            <div class="card">
                <div class="image">
                    <a href="/{{ id }}">
                    <img src="/get/{{ images.large}}" alt="">
                    </a>
                </div>
                <div class="content">
                    <div class="header">
                        <a href="/{{ id }}">
                        {{ title }}
                        </a>
                    </div>
                    <div class="meta">
                        {{#each genres}}
                            <a href="/tag/{{ this }}">{{ this }}</a>
                        {{/each}}
                    </div>
                    <div class="description">
                        <div class="ui star rating" data-original-rating="{{ rating.average }}"></div>
                        <div class="ui floating dropdown button">
                            <i class="download icon"></i>
                            <span class="text">download</span>
                            <div class="menu">
                                {{!-- 需要链接 --}}
                                <a class="item" href="http://www.google.com/">种子</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/movies}}

</div>
